
# This is a template Makefile generated by rpcgen

# Parameters

SERVER = idManager_server

SOURCES.x = idManager.x

TARGETS_CLNT.c = idManager_clnt.c idManager_xdr.c 
TARGETS_SVC.c = idManager_svc.c idManager_xdr.c idManager_server.c 
TARGETS = idManager.h idManager_xdr.c idManager_clnt.c idManager_svc.c idManager_server.c

OBJECTS_CLNT = $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags 

# We prevent those unused warnings because the generated rpc programs have them.
CFLAGS += -Wall -Wextra -ansi -pedantic-errors -Wno-unused-variable -Wno-unused-parameter
LDLIBS += -lnsl
RPCGENFLAGS = 

# Targets 

all : $(SERVER)

$(TARGETS) : $(SOURCES.x) 
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(TARGETS_CLNT.c) 

$(OBJECTS_SVC) : $(TARGETS_SVC.c) 

$(SERVER) : $(OBJECTS_SVC) 
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

 clean:
	 $(RM) core $(OBJECTS_CLNT) $(OBJECTS_SVC) $(SERVER)

